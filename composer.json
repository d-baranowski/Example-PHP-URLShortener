{
  "require": {
    "doctrine/orm": "2.4.*",
    "twig/twig": "^2.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "phpstan/phpstan": "^0.7.0",
    "phpunit/phpunit": "6.1"
  },
  "scripts": {
    "fix": ".\\vendor\\bin\\phpcbf src index.php config.php",
    "test": ".\\vendor\\bin\\phpunit.bat tests",
